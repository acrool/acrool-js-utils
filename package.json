{
  "name": "imagine-js-utils",
  "version": "0.0.1",
  "description": "Common tools and methods for project development",
  "keywords": [
    "typescript",
    "utils"
  ],
  "author": "imagine10255",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imagine10255/jsutils.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "run-s build:claer && microbundle src/packages/*.ts --no-compress --no-css-modules --format modern,cjs",
    "build:claer": "rm -rf ./dist",
    "dev": "cd example && yarn install && yarn run start",
    "start": "run-s build:claer && microbundle src/packages/*.ts watch --no-compress --no-css-modules --format modern,cjs",
    "prepublishOnly": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "gitlog": "git log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cblueby %an %Cgreen(%cr)%Creset'",
    "lint:fix": "eslint ./src --fix",
    "cz": "git cz",
    "release": "standard-version --release-as",
    "release:major": "standard-version -r major",
    "release:minor": "standard-version -r minor",
    "release:patch": "standard-version -r patch",
    "release:alpha": "standard-version --prerelease alpha"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "15.0.3",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "6.3.0",
    "microbundle": "0.14.2",
    "npm-run-all": "^4.1.5",
    "standard-version": "9.3.0",
    "typescript": "4.1.5",
    "deep-equal": "^2.0.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "quotes": [
        "warn",
        "single"
      ],
      "semi": [
        "warn",
        "always"
      ],
      "indent": [
        "warn",
        4
      ],
      "object-curly-spacing": [
        "warn",
        "never"
      ],
      "no-useless-escape": "off",
      "import/no-anonymous-default-export": "off",
      "react-hooks/exhaustive-deps": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "no-mixed-operators": "off"
    }
  }
}
