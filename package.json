{
  "name": "imagine-js-utils",
  "version": "0.0.0",
  "description": "Common tools and methods for project development",
  "private": true,
  "keywords": [
    "typescript",
    "javscript",
    "utils"
  ],
  "author": "imagine10255",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imagine10255/jsutils.git"
  },
  "files": [
    "dist",
    "packages/format"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "run-s build:claer && microbundle src/*.ts -o packages/dist --no-compress --no-css-modules --format modern,cjs",
    "build:claer": "rm -rf ./packages/dist",
    "prepublishOnly": "run-s build",
    "test": "jest --coverage",
    "gitlog": "git log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cblueby %an %Cgreen(%cr)%Creset'",
    "lint:fix": "eslint ./src --fix",
    "cz": "git cz",
    "release-cli": "standard-version --packageFiles ./packages/package.json --bumpFiles ./packages/package.json",
    "release": "yarn release-cli --release-as",
    "release:major": "yarn release-cli -r major",
    "release:minor": "yarn release-cli -r minor",
    "release:patch": "yarn release-cli -r patch",
    "release:alpha": "yarn release-cli --prerelease alpha",
    "release:publish": "echo 'Run `sh ./run-publish.sh` to publish'"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.13",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "6.3.0",
    "deep-equal": "^2.0.5",
    "jest": "^27.4.7",
    "microbundle": "0.14.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "standard-version": "9.3.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "4.1.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "quotes": [
        "warn",
        "single"
      ],
      "semi": [
        "warn",
        "always"
      ],
      "indent": [
        "warn",
        4
      ],
      "object-curly-spacing": [
        "warn",
        "never"
      ],
      "no-useless-escape": "off",
      "import/no-anonymous-default-export": "off",
      "react-hooks/exhaustive-deps": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "no-mixed-operators": "off"
    }
  }
}
